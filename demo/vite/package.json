{
  "name": "demo-tailwind",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start": "npm run dev",
    "build": "npm run build:clean && npm run build:tailwind",
    "build:clean": "rimraf ./dist",
    "build:tailwind": "cross-env NODE_ENV=production tailwindcss --postcss -i styles.css -o ./dist/styles.css --minify",
    "sync": "browser-sync start --config bs.config.js",
    "dev": "nodemon -x \"npm run dev:sync\" -w tailwind.config.js -w bs.config.js -e js",
    "dev:sync": "run-p dev:tailwind sync",
    "dev:tailwind": "cross-env NODE_ENV=development tailwindcss --postcss -i styles.css -o ./dist/styles.css -w",
    "tailwindcss": "node ./node_modules/tailwindcss/lib/cli.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.2"
  }
}
